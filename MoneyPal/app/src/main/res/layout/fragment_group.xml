<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:background="#FFFF"
             android:layout_height="match_parent"
             tools:context=".fragment.GroupFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/top_linealayout2"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:layout_height="155dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:id="@+id/linearLayout_see_detail"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Vacance Ã  Kribi"
                    android:textColor="#FFFF"/>
            <ImageButton
                    android:src="@drawable/ic_more_horiz_black_24dp"
                    android:id="@+id/button_detail_group"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ronded_button_red"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textAllCaps="false">
            </ImageButton>
        </LinearLayout>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressbar_amount"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/amount_current_group"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"
                        android:text="0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/amount_group"
                        android:layout_gravity="end"
                        android:textColor="#FFFF"
                        android:text="0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/info_date_group"
                    android:textColor="#FFFF"
                    android:text="Solde du compte a la Date du 14 May"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/info_solde_group"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="35 000 FCFA"
                        android:textColor="#FFFF"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_users"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/top_linealayout2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintVertical_bias="0.0"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                android:id="@+id/linearLayout3">
            <TextView
                    android:text="+ADD MEMBER"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/add_member_text_view"/>
            <TextView
                    android:textAlignment="textEnd"
                    android:text="PAY MEMBER"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/pay_member_text_view"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/linearLayout2"
                android:background="@color/colorPrimary">
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>