<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="#FFFF"
              android:gravity="center_vertical"
              android:layout_height="wrap_content">

    <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photo_group_row"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icone_users_group"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
                android:id="@+id/group_name_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:text="Nom du group" android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        <TextView
                android:id="@+id/detail_group_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"/>
    </LinearLayout>
    <TextView
            android:id="@+id/amount_group_row"
            android:text="0000"
            android:textSize="15dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
</LinearLayout>