<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserPayActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Ma contribution au groupe"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="598dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Nom du groupe"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_name_contribution" android:textSize="24sp"
            android:textColor="@color/colorPrimary" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Ma contribution actuelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_amoun_contribution" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/group_name_contribution" android:layout_marginTop="32dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/amount_contribution"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:hint="Contribution"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/current_amoun_contribution"
                app:layout_constraintBottom_toTopOf="@+id/button_pay_contribution" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.69"/>
        <Button
                android:text="Envoyer"
                android:background="@drawable/ronded_button"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_pay_contribution" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="300dp" android:textColor="@android:color/white"/>
        <TextView
                android:text="Description du groupe"
                android:paddingHorizontal="18dp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/description_text" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/button_pay_contribution"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>