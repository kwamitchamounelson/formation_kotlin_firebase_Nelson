<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
    <RelativeLayout
            android:id="@+id/message_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rest_round_primary_color">
        <TextView
                android:id="@+id/sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="120dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:textColor="#FF5722"
                android:textAppearance="@style/Base.CardView"
                android:textSize="11dp"
                android:textStyle="italic"
                tools:text=""/>
        <TextView
                android:id="@+id/textView_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="120dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:textAppearance="@style/Base.CardView"
                android:textSize="16dp"
                android:layout_below="@+id/sender_name"
                tools:text="bonjour bonjour bonjour bonjour"/>
        <TextView
                android:id="@+id/textView_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_message_text"
                android:layout_alignEnd="@+id/textView_message_text"
                android:layout_marginEnd="8dp"
                android:text="3/15/2019 3:00 PM"
                android:textSize="8sp"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_below="@+id/textView_message_time"
                android:layout_alignEnd="@+id/textView_message_time"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/button_no_translate_item"
                    android:background="@drawable/ronded_button_reset"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:textAllCaps="false"
                    android:textSize="11dp"
                    android:layout_marginRight="10dp"
                    android:text="Original"/>
            <Button
                    android:id="@+id/button_translate_item"
                    android:background="@drawable/ronded_button"
                    android:layout_width="17dp"
                    android:layout_height="25dp"
                    android:textAllCaps="false"
                    android:text="fr"/>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>