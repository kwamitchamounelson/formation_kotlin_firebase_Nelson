<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
    <RelativeLayout
            android:id="@+id/message_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rest_round_primary_color">
        <TextView
                android:id="@+id/textView_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="120dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:textAppearance="@style/Base.CardView"
                android:textSize="15dp"
                tools:text="bonjour bonjour bonjour bonjour"/>
        <TextView
                android:id="@+id/textView_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_message_text"
                android:layout_alignEnd="@+id/textView_message_text"
                android:layout_marginEnd="8dp"
                android:text="3/15/2019 3:00 PM"
                android:textSize="12sp"/>
        <Button
                android:id="@+id/button_translate_item"
                android:background="@drawable/ronded_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/textView_message_time"
                android:layout_alignEnd="@+id/textView_message_time"
                android:textAllCaps="false"
                android:text="fr"
        />
    </RelativeLayout>

</FrameLayout>