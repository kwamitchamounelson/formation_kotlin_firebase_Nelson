<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginBottom="6dp"
              android:layout_marginTop="6dp"
              android:layout_height="wrap_content">

    <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photo_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_account_circle_black_24dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingHorizontal="20dp"
                  android:paddingVertical="6dp"
                  android:orientation="vertical">

        <TextView android:id="@+id/user_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="12dp"
                  android:text="Nom" android:textSize="18sp"
                  android:textStyle="bold"
                  android:textColor="@android:color/black"/>
        <TextView android:id="@+id/las_message"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Dernier message"/>

    </LinearLayout>

</LinearLayout>